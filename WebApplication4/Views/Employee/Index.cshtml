@model IEnumerable<EmployeeVM>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["Message"] is not null)
{
    <div  id="MessageFade" class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<h1 class="h1 p-4 ">EmpolyeeController</h1>
<br />

<a class="btn btn-success m-4" role="button" asp-action="Create">Create Empolyee</a>

<br />
<form asp-action="Index">
<div class="input-group">
        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" name="searchValue" />
    <button type="submit" class="btn btn-outline-primary"value="search">search</button>
</div>
</form>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(D=>D.Image)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.Name)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.Email)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.PhoneNumber)</th>

                <th scope="col">@Html.DisplayNameFor(D=>D.IsACtive)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.DateOfCreation)</th>

                <th scope="col">@Html.DisplayNameFor(D=>D.Department)</th>

                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <th scope="row"><img src="~/Files/Images/@department.ImageName" class="rounded img-fluid" height="40" width="40" alt="image" /></th>
                    <th scope="row">@department.Name</th>
                    <td>@Html.DisplayFor(d=>department.Email)</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                        @if (department.IsACtive == true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>
 
                        }

                            
                            
                        </td>
                    <td>@Html.DisplayFor(D=>department.PhoneNumber)</td>
                    <td>@Html.DisplayFor(D=>department.Department.Name)</td>


                    <td><a asp-action="Details" asp-route-id="@department.ID"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@department.ID"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@department.ID"><i class="fas fa-trash-alt text-danger"></i></a></td>

                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="alert alert-warning" role="alert">
        there is no Departments
    </div>
}
