@model Department

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span class="form-text text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label asp-for="Code"></label>
    <input class="form-control" asp-for="Code">
    <span class="form-text text-danger" asp-validation-for="Code"></span>

</div>

<div class="form-group">
    <label asp-for="DateOfCreation"></label>
    <input class="form-control" asp-for="DateOfCreation">
    <span class="form-text text-danger" asp-validation-for="DateOfCreation"></span>

</div>