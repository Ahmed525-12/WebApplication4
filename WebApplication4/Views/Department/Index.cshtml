@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Department";
}

<h1 class="h1 p-4 ">DepartmentController</h1>
<br />

<a class="btn btn-success m-4" role="button" asp-action="Create">Create Department</a>

<br />
@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(D=>D.Name)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.Code)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach( var department in Model)
            {
                <tr>
                <th scope="row">@department.Name</th>
                    <td>@department.Code</td>
                    <td>@department.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-id="@department.ID"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@department.ID"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@department.ID"><i class="fas fa-trash-alt text-danger"></i></a></td>

            </tr>
            }
        </tbody>
    </table>

    
}
else
{
    <div class="alert alert-warning" role="alert">
        there is no Departments
    </div>
}



